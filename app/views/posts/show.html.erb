<% content_for(:title, "#{@post.title} | Trimet") %>

<h1> <%= @post.title %></h1>

<p> <%= @post.content %> </p>
  <ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.content %></li>
    <% end %>
  </ul>
<%= link_to "New Comment", new_post_comment_path(@post), :class => "btn btn-xs btn-default" %>
<hr>
<%= link_to "Home", posts_path, :class=> "btn btn-xs btn-primary" %>
<%= link_to "Edit Post", edit_post_path, :class=> "btn btn-xs btn-warning" %>
<%= link_to "Delete", post_path(@post),
                      :data => {confirm: "Are You Sure?"},
                      :method => "delete",
                      :class => "btn btn-xs btn-danger" %>
