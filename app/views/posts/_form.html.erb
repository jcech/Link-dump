<%= form_for @post, :html => { :multipart => true } do |form| %>
  <div class='form-group' id='form-input'>
    <%= form.label :title, "Post Title" %></br>
    <%= form.text_field :title %>
  </div>
  <div class='form-group' id='form-input'>
    <%= form.label :link, "Link URL" %></br>
    <%= form.text_field :link %>
  </div>
  <div class='form-group' id='form-input'>
    <%= form.label :content, "Post Content" %></br>
    <%= form.text_area :content %>
  </div>
    <%= form.hidden_field :total_votes, :value => 0 %>
    <%= form.submit(:class => "btn btn-primary") %>

<% end %>
